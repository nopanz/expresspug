extends ./layout.pug

block content
  span(style="display:block;margin-bottom:10px;") #{user}

  span Your Sell Order has been completed. Here are the details for the payment sent to you.

  h1 Order Summary

  table
    tr
      td Tracking ID
      td #{tracking}
    tr
      td Order Status
      td #{status}
    tr
      td Date Created
      td #{createdAt}
    tr
      td Amount
      td #{amount}
    tr
      td Price
      td #{price}
    tr
      td Bank
      td #{bank}
    tr
      td Account Name
      td #{accountName}
    tr
      td Account Number
      td #{accountNumber}
    tr
      td Peso payout
      td #{pesoPayout}
    tr
      td BTC Address
      td #{address}

  h1 Your Cash Deposits

  table
    tr
      td Date
      td #{transactionDate}
    tr
      td Transaction Code
      td #{transactionCode}
